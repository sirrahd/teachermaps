<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <%= t('shared.errors', count: pluralize(@user.errors.count, t('shared.error_noun'))) %>
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>